{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "coreclr",
      "request": "launch",
      "name": "Launch SnacksPOS Web",
      "program": "${workspaceFolder}/SnacksPOS.Web/bin/Debug/net8.0/SnacksPOS.Web.dll",
      "args": [],
      "cwd": "${workspaceFolder}/SnacksPOS.Web",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:5173"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/SnacksPOS.Web/Views"
      },
      "preLaunchTask": "build"
    }
  ]
}
