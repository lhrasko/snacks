@page "{id:int}"
@model SnackPOS.Pages.Orders.DetailsModel
@{
    ViewData["Title"] = "Order";
}
<h1>Order #@Model.Order.Id</h1>
<ul>
@foreach(var item in Model.Order.Items)
{
    <li>@item.Product?.Name - @item.Quantity x $@item.Product?.Price</li>
}
</ul>
<a asp-page="/Products/Index" class="btn btn-primary">Back to Products</a>
