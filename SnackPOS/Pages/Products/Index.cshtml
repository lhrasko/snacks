@page
@model SnackPOS.Pages.Products.IndexModel
@{
    ViewData["Title"] = "Products";
}
<h1>Products</h1>
<div class="row">
    @foreach (var p in Model.Products)
    {
        <div class="col-6 col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@p.Name</h5>
                    <p class="card-text">$@p.Price</p>
                    @if(p.Available)
                    {
                        <form method="post" asp-page-handler="Add" asp-route-id="@p.Id">
                            <button type="submit" class="btn btn-primary">Add</button>
                        </form>
                    }
                    else
                    {
                        <span class="text-muted">Unavailable</span>
                    }
                </div>
            </div>
        </div>
    }
</div>
<a class="btn btn-success" asp-page="/Cart/Index">View Cart</a>
