@page
@model SignOutModel
@{
    ViewData["Title"] = "Sign Out";
}

<div class="max-w-sm mx-auto mt-10 text-center">
    <h2 class="text-2xl font-bold mb-4">Sign Out</h2>
    <p class="mb-4">Are you sure you want to sign out?</p>
    <form method="post" class="space-y-4">
        <button type="submit" class="w-full bg-red-600 hover:bg-red-700 text-white p-2 rounded">Sign Out</button>
        <a href="/Snacks" class="block w-full bg-gray-600 hover:bg-gray-700 text-white p-2 rounded">Cancel</a>
    </form>
</div>
